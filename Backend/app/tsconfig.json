{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"lib": [ "es6", "esnext.asynciterable" ],
		"sourceMap": true,
		"outDir": "dist/",
		"skipLibCheck": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"*": ["types/*"],
			"@/*": [
				"src/*"
			]
		},
	},
	"exclude": [
		"node_modules",
		"old"
	]
}
